import 'package:flutter/material.dart';

void main() => runApp(const ArtistsApp());

class ArtistsApp extends StatelessWidget {
  const ArtistsApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      title: 'Світові художники',
      theme: ThemeData(
        colorSchemeSeed: Colors.deepPurple,
        useMaterial3: true,
      ),
      home: const ArtistsListScreen(),
    );
  }
}

class Artist {
  final String name;
  final String imageUrl;
  final String description;

  Artist({
    required this.name,
    required this.imageUrl,
    required this.description,
  });
}

// ✔ 100% стабільні зображення (picsum photos)
final List<Artist> artists = [
  Artist(
    name: 'Вінсент ван Гог',
    imageUrl: 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS0Fzj6tX334FOKXbfgKcfDb-rjqDgTfx6MMw&s',
    description: 'Голландський постімпресіоніст, відомий своїми експресивними мазками та “Зоряною ніччю”.',
  ),
  Artist(
    name: 'Леонардо да Вінчі',
    imageUrl: 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSFvIjocMtu9pe_YytYEK0AaDGJsiv2AxauPw&s',
    description: 'Італійський художник та винахідник. Автор “Мона Лізи” та “Таємної вечері”.',
  ),
  Artist(
    name: 'Пабло Пікассо',
    imageUrl: 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSvfAay9Ko1A1WF13TMNp4YDOwuisb7dGCMzQ&s',
    description: 'Іспанський художник, один із засновників кубізму.',
