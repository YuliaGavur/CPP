import 'package:flutter/material.dart';

void main() => runApp(const MyLayoutApp());

class MyLayoutApp extends StatelessWidget {
  const MyLayoutApp({super.key});

  static const double g = 400; 
  static const double h = 370; 
  static const double r = 5;   
  static const double k = 150; 
  static const double d = 150; 
  static const double margin = 20.0;

  static const TextStyle textStyle = TextStyle(
    fontFamily: 'Cambria',
    fontSize: 14,
    color: Colors.black,
  );

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Макет Row + Column + ConstrainedBox',
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        backgroundColor: Colors.white,
        body: Center(
          child: ConstrainedBox(
            constraints: const BoxConstraints(
              maxWidth: g,
              maxHeight: h,
            ),
            child: Container(
              width: g,
              height: h,
              decoration: BoxDecoration(
                border: Border.all(color: Colors.black),
                borderRadius: BorderRadius.circular(r),
              ),
              child: Padding(
                padding: const EdgeInsets.all(margin),
                child: Column(
                  crossAxisAlignment: CrossAxisAlignment.start,
                  children: [
                    // --- Верхній ряд: Жовтий + Синій ---
                    SizedBox(
                      height: 100,
                      child: Row(
                        children: [
                          // Жовтий блок
                          Container(
                            width: k,
                            padding: const EdgeInsets.all(8),
                            decoration: BoxDecoration(
                              color: Colors.yellow,
                              borderRadius: BorderRadius.circular(r),
                            ),
                            child: const Text(
                              'Ще не вмерла Україна, і\nслава, і воля,\nще нам, браття.',
                              style: textStyle,
                            ),
                          ),

                          const Expanded(child: SizedBox()),

                          // Синій блок
                          Container(
                            width: 200,
                            padding: const EdgeInsets.all(8),
                            decoration: BoxDecoration(
                              color: Color(0xFF90CAF9),
                              borderRadius: BorderRadius.circular(r),
                            ),
                            child: const Text(
                              'Згинуть наші вороженьки,\nяк роса на сонці,\nзапануєм і ми, браття,\nу своїй сторонці.',
                              style: textStyle,
                            ),
                          ),
                        ],
                      ),
                    ),

                    const SizedBox(height: 50),

                    
                    Align(
                      alignment: Alignment.centerRight,
                      child: Container(
                        width: 200,
                        height: d,
                        padding: const EdgeInsets.all(8),
                        decoration: BoxDecoration(
                          color: Colors.white,
                          border: Border.all(color: Colors.black),
                          borderRadius: BorderRadius.circular(r),
                        ),
                        child: const Text(
                          'І покажем, що ми, браття,\nкозацького роду.',
                          style: textStyle,
                        ),
                      ),
                    ),
                  ],
                ),
              ),
            ),
          ),
        ),
      ),
    );
  }
}
