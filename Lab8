import 'package:flutter/material.dart';

void main() => runApp(const MyLayoutApp());

class MyLayoutApp extends StatelessWidget {
  const MyLayoutApp({super.key});

  static const double g = 400;
  static const double h = 370;
  static const double r = 12; // більший радіус для кращої видимості
  static const double k = 150;
  static const double d = 150;
  static const double margin = 20.0;

  static const TextStyle textStyle = TextStyle(
    fontFamily: 'Cambria',
    fontSize: 15,
    color: Colors.black,
  );

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        backgroundColor: const Color(0xFFF5F5F5), // світло-сірий для контрасту
        body: Center(
          child: ConstrainedBox(
            constraints: const BoxConstraints(
              maxWidth: g,
              maxHeight: h,
            ),
            child: Container(
              width: g,
              height: h,
              decoration: BoxDecoration(
                color: Colors.white,
                border: Border.all(color: Colors.black87, width: 2),
                borderRadius: BorderRadius.circular(r),
                boxShadow: const [
                  BoxShadow(
                    color: Colors.black26,
                    blurRadius: 10,
                    offset: Offset(4, 4),
                  )
                ],
              ),
              child: Padding(
                padding: const EdgeInsets.all(margin),
                child: Column(
                  crossAxisAlignment: CrossAxisAlignment.start,
                  children: [
                    SizedBox(
                      height: 110,
                      child: Row(
                        children: [
                          ColoredTextBox(
                            color: Colors.yellow.shade600,
                            width: k,
                            text:
                                'Ще не вмерла Україна, і\nслава, і воля,\nще нам, браття.',
                          ),

                          const Expanded(child: SizedBox()),

                          ColoredTextBox(
                            color: Colors.lightBlue.shade300,
                            width: 200,
                            text:
                                'Згинуть наші вороженьки,\nяк роса на сонці,\nзапануєм і ми, браття,\nу своїй сторонці.',
                          ),
                        ],
                      ),
                    ),

                    const SizedBox(height: 50),

                    Align(
                      alignment: Alignment.centerRight,
                      child: Container(
                        width: 200,
                        height: d,
                        padding: const EdgeInsets.all(12),
                        decoration: BoxDecoration(
                          color: Colors.white,
                          border: Border.all(color: Colors.black, width: 2),
                          borderRadius: BorderRadius.circular(r),
                          boxShadow: const [
                            BoxShadow(
                              color: Colors.black26,
                              blurRadius: 8,
                              offset: Offset(3, 3),
                            )
                          ],
                        ),
                        child: const Text(
                          'І покажем, що ми, браття,\nкозацького роду.',
                          style: textStyle,
                        ),
                      ),
                    ),
                  ],
                ),
              ),
            ),
          ),
        ),
      ),
    );
  }
}
